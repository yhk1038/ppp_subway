<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user_.ringdingdongsubway.MainActivity"
    android:orientation="vertical">

    <!--헤더-->
    <LinearLayout
        android:id="@+id/header_mother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">
        <!--헤더 1/3-->
        <LinearLayout
            android:id="@+id/header_1_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"/>

        <!--헤더 2/3-->
        <LinearLayout
            android:id="@+id/header_2_3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="20dp"/>
        </LinearLayout>

        <!--헤더 3/3-->
        <LinearLayout
            android:id="@+id/header_3_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/start"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_deactivate_clock_bg"/>
            <ImageButton
                android:id="@+id/stop"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_activate_clock_bg"/>
        </LinearLayout>
    </LinearLayout>

    <!--바디-->
    <ListView
        android:id="@+id/list2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위치 감지 상태"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fabBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center|end"
        android:orientation="horizontal"
        android:background="@drawable/ic_fab" />


</LinearLayout>
